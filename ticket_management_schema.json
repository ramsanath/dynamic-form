{
  "title": "Support Ticket Form",
  "fields": [
    {
      "label": "CreatedBy",
      "key": "created_by",
      "type": "TEXT",
      "required": true,
      "disabled": false,
      "visible": true,
      "validations": [
        {
          "type": "IS_NOT_EMPTY"
        }
      ]
    },
    {
      "label": "Description",
      "key": "description",
      "type": "TEXT",
      "required": true,
      "disabled": false,
      "visible": true,
      "rules": [
        {
          "condition": {
            "type": "IS_NOT_EMPTY"
          },
          "actions": [
            {
              "targetKey": "comments",
              "type": "SHOW"
            },
            {
              "targetKey": "comments",
              "type": "ENABLE"
            }
          ]
        }
      ],
      "validations": [
        {
          "type": "IS_NOT_EMPTY"
        }
      ]
    },
    {
      "label": "Severity",
      "key": "severity",
      "type": "NUMBER",
      "required": true,
      "disabled": false,
      "visible": true,
      "validations": [
        {
          "type": "IS_NOT_EMPTY"
        },
        {
          "type": "GREATER_THAN",
          "value": "0"
        },
        {
          "type": "LESSER_THAN",
          "value": "10"
        }
      ]
    },
    {
      "label": "Status",
      "key": "status",
      "type": "CHOICE",
      "required": true,
      "disabled": false,
      "visible": true,
      "choices": [
        "CANCELLED",
        "COMPLETED"
      ],
      "rules": [
        {
          "condition": {
            "type": "IS",
            "value": "CANCELLED"
          },
          "actions": [
            {
              "targetKey": "cancelled_reason",
              "type": "ENABLE"
            },
            {
              "targetKey": "cancelled_reason",
              "type": "SHOW"
            }
          ]
        }
      ],
      "validations": [
        {
          "type": "IS_NOT_EMPTY"
        }
      ]
    },
    {
      "label": "CancelledReason",
      "key": "cancelled_reason",
      "type": "CHOICE",
      "required": true,
      "disabled": true,
      "visible": false,
      "choices": [
        "ENDUSER",
        "OTHERS"
      ],
      "rules": [
        {
          "condition": {
            "type": "IS",
            "value": "OTHERS"
          },
          "actions": [
            {
              "targetKey": "cancelled_other_description",
              "type": "SHOW"
            },
            {
              "targetKey": "cancelled_other_description",
              "type": "ENABLE"
            }
          ]
        }
      ],
      "validations": [
        {
          "type": "IS_NOT_EMPTY"
        }
      ]
    },
    {
      "label": "CancelledOtherDescription",
      "key": "cancelled_other_description",
      "type": "TEXT",
      "required": true,
      "disabled": true,
      "visible": false,
      "validations": [
        {
          "type": "IS_NOT_EMPTY"
        }
      ]
    },
    {
      "label": "Comments",
      "key": "comments",
      "type": "TEXT",
      "required": true,
      "disabled": true,
      "visible": false
    }
  ]
}